startup_message off
defscrollback 2048
defutf8 on
term screen-256color
altscreen on
termcapinfo xterm* ti@:te@

#backtick 1 0 5 sh -c 'acpi | sed "s/Battery 0://; s/Discharging, //; s/Unknown, //; s/Charging, //"'
backtick 1 0 5 sh -c 'acpi | sed "s/,//g; s/Battery 0://; s/D[^ ]*/D/; s/C[^]/C s/U[^ ]*/U/; s/[F].*/F/" | cut -d " " -f 2-4'
caption always '%{= G}[ %{G}%H %{r}%1`%{g} ][%= %{= w}%?%-Lw%?%{= b}%n*%f %t%?%{= b}(%u)%?%{= w}%+Lw%?%= %{= g}][%{B}%Y-%m-%d %D %{W}%c:%s %{g}]'

screen 1
bindkey "^[t" screen 1
bindkey "^[h" prev
bindkey "^[l" next
bindkey "^['" windowlist
bindkey "^[w" other
         
bindkey "^[0" select 0
bindkey "^[1" select 1
bindkey "^[2" select 2
bindkey "^[3" select 3
bindkey "^[4" select 4
bindkey "^[5" select 5
bindkey "^[6" select 6
bindkey "^[7" select 7
bindkey "^[8" select 8
bindkey "^[9" select 9
         
#bindkey "^[s" split
#bindkey "^[v" split -v
bindkey "^[x" remove
#bindkey "^[w" focus
bindkey "^[n" title
bindkey "^[a" meta
bindkey "^[;" colon
bindkey "^[d" detach
bindkey "^[k" kill
bindkey "^[c" copy
bindkey "^[]" paste .
bindkey "^[/" help
bindkey "^[." eval writebuf 'exec /bin/sh -c "xsel -i -b < /tmp/screen-exchange"' 
